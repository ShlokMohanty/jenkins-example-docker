pipeline {
  stages {
    stage('build'){
      steps{
        sh 'sudo docker build -t alpine .'
      }
     }
    stage('run docker image') {
      steps {
        sh 'sudo docker run -itd alpine'
      }
    }
    stage('list all the processes'){
      steps{
        sh 'sudo docker ps'
      }
    }
  }
}
