pipeline {
  agent any

  stages {
    stage('build'){
      steps{
        sh 'sudo docker build -t img:latest .'
      }
     }
    stage('run docker image') {
      steps {
        sh 'sudo docker run -itd img:latest'
      }
    }
    stage('list all the processes'){
      steps{
        sh 'sudo docker ps'
      }
    }
  }
}
